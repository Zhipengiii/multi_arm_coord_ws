<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="laser">
    <xacro:macro name="laser" params="prefix middle parent *origin">
        <link name="${prefix}laser${middle}_link">
            <inertial>
                <origin xyz="0.00130047182335188 8.71661430903336E-05 0.0397106473732433" rpy="0 0 0" />
                <mass value="0.101936733121447" />
                <inertia ixx="0.000117105373758523" ixy="1.11586540226324E-07" ixz="-3.34607877093784E-07" iyy="0.000115891247098562" iyz="2.66539587437291E-08" izz="0.000195379409514532" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://mr1000_dual_fr3_description/meshes/laser.STL" />
                </geometry>
                <material name="">
                    <color rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://mr1000_dual_fr3_description/meshes/laser.STL" />
                </geometry>
            </collision>
        </link>
        
        <joint name="${prefix}laser${middle}_joint" type="fixed">
            <xacro:insert_block name="origin" />
            <parent link="${parent}" />
            <child link="${prefix}laser${middle}_link" />
            <axis xyz="0 0 0" />
        </joint>

    </xacro:macro>

</robot>